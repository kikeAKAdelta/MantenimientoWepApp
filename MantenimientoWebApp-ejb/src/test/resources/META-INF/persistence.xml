    <class>sv.edu.uesocc.ingenieria.mantenimientolib.Diagnostico</class>
    <class>sv.edu.uesocc.ingenieria.mantenimientolib.DiagnosticoParte</class>
    <class>sv.edu.uesocc.ingenieria.mantenimientolib.Equipo</class>
    <class>sv.edu.uesocc.ingenieria.mantenimientolib.Estado</class>

    <class>sv.edu.uesocc.ingenieria.mantenimientolib.ExcepcionCalendario</class>
    <class>sv.edu.uesocc.ingenieria.mantenimientolib.MttoDetalle</class>
    <class>sv.edu.uesocc.ingenieria.mantenimientolib.OrdenTrabajo</class>
